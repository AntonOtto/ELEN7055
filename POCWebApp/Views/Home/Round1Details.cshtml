@model List<POCWebApp.Models.Round1Results>
@{
    ViewBag.Title = "Round 1 Details - " + ViewBag.Tournament + " - " + @ViewBag.GroupName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Tournament: @ViewBag.GroupName</h2>
<button onclick="goBack()" class="btn">Go Back</button>
<br /><br />
<div id="dvData">
    
    <table class="table table-striped table-bordered table-condensed tablesorter" id="AllMatchesTable">
        <thead>
            <tr class="tenant-table-header" style="color:white; background-color:#a6ce38; padding:2px;">
                <th>Team Name</th>
                <th>Games Played</th>
                <th>Games Won</th>
                <th>Games Lost</th>
                <th>Games Drawn</th>
                <th>Goals For</th>
                <th>Goals Against</th>
                <th>Points</th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.Raw(item.Team)</td>
                        <td>@Html.Raw(item.GamesPlayed)</td>
                        <td>@Html.Raw(item.GamesWon)</td>
                        <td>@Html.Raw(item.GamesLost)</td>
                        <td>@Html.Raw(item.GamesDrawn)</td>
                        <td>@Html.Raw(item.GoalsFor)</td>
                        <td>@Html.Raw(item.GoalsAgainst)</td>
                        <td>@Html.Raw(item.Points)</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

